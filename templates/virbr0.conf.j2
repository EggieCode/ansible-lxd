auto virbr0
iface virbr0 inet static

    address   {{ virbr0_subnet_ipv4 | ipaddr('address') }}
    network   {{ virbr0_subnet_ipv4 | ipaddr('network') }}
    netmask   {{ virbr0_subnet_ipv4 | ipaddr('netmask') }}
    broadcast {{ virbr0_subnet_ipv4 | ipaddr('broadcast') }}
    bridge_ports none
    bridge_stp off
    bridge_fd 0
    bridge_waitport 0

{% if virbr0_subnet_ipv6 | ipv6('host/prefix') %}
iface virbr0 inet6 static
   address {{ virbr0_subnet_ipv6 | ipv6('host') }}
   netmask {{ virbr0_subnet_ipv6 | ipv6('prefix') }}
{% endif %}

